<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@drawable/slider_regis_page_card"
        android:layout_width="275dp"
        android:layout_height="478dp">

        <ImageView
            android:id="@+id/iv_item_data_slider_register_page"
            android:src="@drawable/improve_shape"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:layout_width="205dp"
            android:layout_height="294dp"/>

        <TextView
            android:id="@+id/tv_gede_item_data_slider_register_page"
            android:layout_marginVertical="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_item_data_slider_register_page"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="@color/putih"
            android:text="Improve Shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_kecil_item_data_slider_register_page"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_gede_item_data_slider_register_page"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:text="I have a low amount of body fat\nand need / want to build more\nmuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</RelativeLayout>