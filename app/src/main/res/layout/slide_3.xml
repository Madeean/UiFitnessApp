<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/putih"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_eat_well"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/eat_well" />

    <TextView

        android:id="@+id/tv_eat_well"
        android:fontFamily="@font/poppins_boldd"
        android:textSize="24sp"
        android:textColor="@color/hitam"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/iv_eat_well"
        android:text="Eat Well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textColor="@color/coklatMuda"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/tv_eat_well"
        android:text="Let's start a healthy lifestyle with us, we can \ndetermine your diet every day. healthy \neating is fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>