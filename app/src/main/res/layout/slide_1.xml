<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/putih"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_track_your_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/track_your_goal" />

    <TextView

        android:id="@+id/tv_track_your_goal"
        android:fontFamily="@font/poppins_boldd"
        android:textSize="24sp"
        android:textColor="@color/hitam"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/iv_track_your_goal"
        android:text="Track Your Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textColor="@color/coklatMuda"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/tv_track_your_goal"
        android:text="Don't worry if you have trouble determining \nyour goals, We can help you determine your \ngoals and track your goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>